<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainEspacio">

    <ImageView
            android:layout_width="727px"
            android:layout_height="436px" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.694"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            android:adjustViewBounds="true" android:cropToPadding="true"
            android:layout_marginTop="4dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="345dp"/>
    <Button
            android:text="Activar Mapa"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp" android:layout_marginStart="148dp" android:layout_marginEnd="145dp"
            android:layout_marginRight="145dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="43dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.542"/>
    <TextView
            android:layout_width="203dp"
            android:layout_height="43dp"
            android:id="@+id/textView2"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:text="Campos Disponibles"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="102dp" android:layout_marginStart="102dp" android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/editText"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/button2"/>


</android.support.constraint.ConstraintLayout>